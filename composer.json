{
	"name": "wildwolf/yubico-otp",
	"description": "Alternative to the official php-yubico client",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Volodymyr Kolesnykov",
			"email": "volodymyr@wildwolf.name",
			"homepage": "https://wildwolf.name/",
			"role": "Developer"
		}
	],
	"keywords": [
		"Yubico",
		"OTP",
		"security",
		"authentication",
		"2FA"
	],
	"require": {
		"php": "^8.1",
		"ext-curl": "*",
		"ext-openssl": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^13.0.0",
		"psalm/plugin-phpunit": "^0.19.0",
		"vimeo/psalm": "^6.0.0"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/"
		]
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"composer/package-versions-deprecated": true
		},
		"platform": {
			"php": "8.1.31"
		}
	},
	"scripts": {
		"psalm": "psalm --long-progress --no-cache -m",
		"test": "phpunit"
	}
}
